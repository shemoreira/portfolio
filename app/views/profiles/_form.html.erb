<%= form_for @profile, html: { multipart: true, class: "ui form" } do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.file_field :avatar %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :github %>
    <%= f.text_field :github %>
  </div>

  <div class="field">
    <%= f.label :bio %>
    <%= f.text_field :bio %>
  </div>

<h1>Skills</h1>
    <%= f.fields_for :skills do |skill_form| %>
    <div class="field">
      <%= skill_form.label :name %>
      <%= skill_form.text_field :name %>
    </div>
    <div class="field">
      <%= skill_form.label :years %>
      <%= skill_form.text_field :years %>
    </div>
    <% end %>

    <h1>Jobs</h1>
    <%= f.fields_for :jobs do |j| %>
    <div class="field">
      <%= j.label :title %>
      <%= j.text_field :title %>
    </div>
    <div class="field">
      <%= j.label :description %>
      <%= j.text_field :description %>
    </div>
    <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
